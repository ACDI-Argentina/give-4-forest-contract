    "eth-ens-namehash": "^2.0.8",
    "globalthis": "^1.0.3",
    "madr": "^2.1.2",
    "multiformats": "^9.6.5",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@aragon/buidler-aragon": "^0.2.0",
